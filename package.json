{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run db:migrate:local && next dev",
    "dev:inngest": "inngest-cli dev",
    "build": "next build",
    "build:cloudflare": "opennextjs-cloudflare build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "bun db:migrate:remote && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply {{dbName}} --local",
    "db:migrate:remote": "wrangler d1 migrations apply {{dbName}} --remote",
    "db:migrate:dev": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production drizzle-kit migrate",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.2",
    "@libsql/client": "^0.10.0",
    "@opennextjs/cloudflare": "^1.11.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@trpc/client": "^11.6.0",
    "@trpc/react-query": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "better-auth": "^1.3.28",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "global": "^4.4.0",
    "inngest": "^3.44.3",
    "lucide-react": "^0.438.0",
    "next": "14.2.5",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@clack/prompts": "^0.7.0",
    "@cloudflare/workers-types": "^4.20240903.0",
    "@iarna/toml": "^2.2.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "happy-dom": "^20.0.8",
    "inngest-cli": "^1.12.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5",
    "vercel": "^37.3.0",
    "vitest": "^3.2.4",
    "wrangler": "4"
  },
  "trustedDependencies": [
    "inngest-cli"
  ]
}

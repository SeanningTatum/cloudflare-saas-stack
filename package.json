{
  "name": "cloudflare-saas-stack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run db:migrate:local && next dev",
    "dev:inngest": "inngest-cli dev",
    "build": "next build",
    "build:cloudflare": "opennextjs-cloudflare build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "bun db:migrate:remote && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply create-admin-panel-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply create-admin-panel-db --remote",
    "db:migrate:dev": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production drizzle-kit migrate",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio",
    "setup": "bun run scripts/first-time-setup.ts",
    "auth:generate": "IS_CLI=true bunx --yes @better-auth/cli@latest generate --config src/server/auth.ts --output src/server/db/schema.ts -y"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@libsql/client": "^0.10.0",
    "@opennextjs/cloudflare": "^1.11.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-table": "^8.21.3",
    "@trpc/client": "^11.6.0",
    "@trpc/react-query": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "better-auth": "^1.3.28",
    "better-auth-cloudflare": "^0.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "global": "^4.4.0",
    "inngest": "^3.44.3",
    "lucide-react": "^0.548.0",
    "next": "14.2.5",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@clack/prompts": "^0.7.0",
    "@cloudflare/workers-types": "^4.20240903.0",
    "@iarna/toml": "^2.2.5",
    "@types/node": "^20",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "happy-dom": "^20.0.8",
    "inngest-cli": "^1.12.1",
    "postcss": "^8.5.6",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vercel": "^37.3.0",
    "vitest": "^3.2.4",
    "wrangler": "4"
  },
  "trustedDependencies": [
    "inngest-cli"
  ]
}
